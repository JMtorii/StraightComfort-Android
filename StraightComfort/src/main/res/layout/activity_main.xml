<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageButton
        android:layout_width="320dp"
        android:layout_height="100dp"
        android:id="@+id/FullWorkStation"
        android:layout_row="2"
        android:layout_column="3"
        android:layout_above="@+id/WorkStation"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />

    <ImageButton
        android:layout_width="320dp"
        android:layout_height="100dp"
        android:id="@+id/WorkStation"
        android:layout_row="3"
        android:layout_column="3"
        android:layout_gravity="center"
        android:layout_above="@+id/Discomfort"
        android:layout_alignLeft="@+id/Discomfort"
        android:layout_alignStart="@+id/Discomfort"
        android:layout_marginBottom="37dp" />

    <ImageButton
        android:layout_width="320dp"
        android:layout_height="100dp"
        android:id="@+id/Discomfort"
        android:layout_row="4"
        android:layout_column="3"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp" />

</RelativeLayout>